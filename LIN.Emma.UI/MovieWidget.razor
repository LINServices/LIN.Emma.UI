@using LIN.Types.Exp.Search.Models;
@using LIN.Types.Exp.Search.Enums;

@code {

    [Parameter]
    public LIN.Types.Exp.Search.Models.Movie? Modelo { get; set; }

}

@if (Modelo == null)
{
    return;
}

<div class="flex w-full items-center rounded-lg bg-white/40 px-5 py-3 dark:bg-zinc-500/40">

    <img class="h-28 rounded" src="@Modelo?.Poster" />

    <div class="ml-2 flex flex-col">

        <label class="mt-1 text-sm font-bold dark:text-zinc-300">@Modelo?.Name</label>

        <div class="my-1 flex w-max items-center gap-2 rounded bg-zinc-200 px-3 py-1">
            <svg class="h-3 w-3 fill-amber-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512"><path d="M316.9 18C311.6 7 300.4 0 288.1 0s-23.4 7-28.8 18L195 150.3 51.4 171.5c-12 1.8-22 10.2-25.7 21.7s-.7 24.2 7.9 32.7L137.8 329 113.2 474.7c-2 12 3 24.2 12.9 31.3s23 8 33.8 2.3l128.3-68.5 128.3 68.5c10.8 5.7 23.9 4.9 33.8-2.3s14.9-19.3 12.9-31.3L438.5 329 542.7 225.9c8.6-8.5 11.7-21.2 7.9-32.7s-13.7-19.9-25.7-21.7L381.2 150.3 316.9 18z" /></svg>
            <label class="text-sm">@Modelo?.Rating</label>
        </div>

        <p class="text-xs dark:text-zinc-400">@Modelo?.Description?.Substring(0, 80) ...</p>

    </div>

</div>